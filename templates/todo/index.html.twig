{% extends 'base.html.twig' %} {% block title %}Ma todo list{% endblock %} {% block body %}

<section class="taches">
    {% for tache in taches %}
    <tache>
        <li class={% if tache.valide> 0 %}checked{% endif %}>
            <a href="/todo/{{tache.id}}/show">{{tache.title}}</a>
        </li>
        <button class="btn btn-success">
            <a href="/todo/{{tache.id}}/delete">Effacer la tâche</a>
        </button>
        <div class="metadata"> Tache créée le {{ tache.createdAt| date( 'd/m/Y') }}</div>
    </tache>
    {% endfor %}
</section>

{% endblock %}